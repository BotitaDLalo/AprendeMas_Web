@{
    // Establece el diseño de la vista utilizando una plantilla compartida específica para docentes
    Layout = "~/Views/Shared/_LayoutDocente.cshtml";

    // Define el título de la página
    ViewData["Title"] = "Inicio - Docente";

    // Incluye el modal para gestionar grupos
    @Html.Partial("~/Views/Docente/GruposModal.cshtml")

    // Incluye el modal para gestionar materias
    @Html.Partial("~/Views/Docente/MateriasModal.cshtml")
}


<!-- Sección del encabezado que contiene el título de la página y un icono -->
<div class="misCursos-header">
    <h2 class="misCursos-titulo">
        Mis cursos
        <!-- Icono de filtro para interactuar con los cursos -->
        <img src="@Url.Content("~/Iconos/FILTRO-26.svg")"
             alt="ActivIA Logo"
             class="misCursos-icono">
    </h2>

    <!-- Menú desplegable que permite al docente crear o gestionar grupos y materias -->
    <div class="misCursos-dropdown">
        <button class="misCursos-btn-crear" id="misCursos-dropdownBtn">CREAR</button>
        <!-- Menú desplegable que aparece al hacer clic en el botón CREAR -->
        <div class="misCursos-dropdown-menu" id="misCursos-dropdownMenu">
            <!-- Botón que abre el modal para gestionar materias -->
            <button class="misCursos-dropdown-item" data-bs-toggle="modal" data-bs-target="#materiasModal">Gestionar Materias</button>
            <!-- Botón que abre el modal para gestionar grupos -->
            <button class="misCursos-dropdown-item" data-bs-toggle="modal" data-bs-target="#gruposModal" id="gestionarGruposBtn">Gestionar Grupos</button>
        </div>
    </div>
</div>



<br />
<br />
<!-- Contenedor que muestra la lista de grupos, los cuales serán manejados por el archivo docente.js -->
<div id="listaGrupos" class="mt-4">
    <!-- Aquí se mostrará la lista de grupos que el docente ha creado. Esta parte está controlada por el archivo docente.js -->
</div>

<div class="card bg-primary text-white" style="max-width: 30em; height: 6em; display: flex; flex-direction: row; align-items: center; transition: transform 0.3s ease, box-shadow 0.3s ease;" onmouseover="this.style.transform='translateY(-10px)'; this.style.boxShadow='0 10px 20px rgba(0, 0, 0, 0.2)';" onmouseout="this.style.transform=''; this.style.boxShadow='';">
    <img class="card-img-top" src="/Iconos/1-26.svg" alt="Card image cap"
         style="max-width: 25%; margin: auto; padding: 0.5em; border-radius: 0.7em;">

    <div class="card-body" style="display: flex; justify-content: space-between; align-items: center; flex: 1; overflow: hidden;">
        <div class="text-section" style="max-width: 100%; overflow: hidden; display: flex; flex-direction: column; justify-content: center;">
            <h5 class="card-title" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; margin: 0; font-weight: bold;">Card title</h5>
            <p class="card-text" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; margin: 0;">
                Some quick example text to build on the card title and make up the bulk of the card's content.
            </p>
        </div>

        <div class="cta-section" style="max-width: 40%; display: flex; flex-direction: column; justify-content: center;">
            <button class="btn btn-link text-white p-0" type="button" data-bs-toggle="dropdown"
                    aria-expanded="false" onclick="event.stopPropagation();"
                    style="width: 3em; height: 3em; display: flex; align-items: center; justify-content: center; border: none; outline: none; text-decoration: none;">
                <i class="fas fa-cog" style="font-size: 1.5em;"></i> <!-- Icono de engranaje más grande -->
            </button>
        </div>
    </div>
</div>



<div id="contenedorMaterias"></div>


<!-- Separador visual para organizar las secciones -->
<div class="divider"></div>

<!-- Título que indica que esta sección contiene materias sin grupo asignado -->
<div class="section-title">
    Materias sin grupo registrado
</div>

<!-- Contenedor donde se mostrarán las materias que aún no tienen grupo asignado -->
<div id="listaMateriasSinGrupo" class="mt-4">
    <!-- Aquí se mostrarán las materias que no han sido asignadas a ningún grupo. Este contenido también es controlado por docente.js -->
</div>


@section Scripts {
    <!--Incluye el archivo de JavaScript para manejar las funcionalidades específicas de los docentes-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/Docente/Grupos/docente.js"></script>
}