
@{
    ViewData["Title"] = "GruposModal";
}

<center>
<!-- Modal para Grupos -->
<div class="modal fade" id="gruposModal" tabindex="-1" aria-labelledby="gruposModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="gruposModalLabel">Gestión de Grupos</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Formulario para crear o editar grupos -->
                <form id="gruposForm">
                    <div class="mb-3">
                        <label for="nombreGrupo" class="form-label">Nombre del Grupo</label>
                        <input type="text" class="form-control" id="nombreGrupo" placeholder="Ingrese el nombre del grupo" required>
                    </div>
                    <div class="mb-3">
                        <label for="descripcionGrupo" class="form-label">Descripción</label>
                        <textarea class="form-control" id="descripcionGrupo" rows="3" placeholder="Ingrese una descripción"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="codigoColorGrupo" class="form-label">Color</label>
                        <select class="form-select" id="codigoColorGrupo">
                            <option value="#ff0000">Rojo</option>
                            <option value="#00ff00">Verde</option>
                            <option value="#0000ff">Azul</option>
                            <!-- Agregar más colores según necesidad -->
                        </select>
                    </div>
                </form>
                <div id="listaGrupos">
                    <!-- Aquí se renderiza la lista de grupos -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="guardarGrupo()">Guardar Grupo</button>
            </div>
        </div>
    </div>
</div>
</center>