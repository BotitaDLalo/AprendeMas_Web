<div class="alumnos-container">
    <!-- Botón para agregar alumnos -->
    <div class="add-alumno-container">
        <button class="add-alumno-btn" onclick="toggleAgregarAlumnos()">Agregar Alumnos</button>
        <div class="dropdown-agregar" id="dropdownAgregar">
            <button onclick="invitarAlumno()">Invitar Alumno</button>
        </div>
    </div>

    <!-- Lista de alumnos -->
    <div class="lista-alumnos">
        <h3>Lista de Alumnos</h3>
        <ul>
            <li class="alumno-item">
                <span>Juan Pérez</span>
                <div class="acciones">
                    <button onclick="editarAlumno(1)">Editar</button>
                    <button onclick="eliminarAlumno(1)">Eliminar</button>
                </div>
            </li>
            <li class="alumno-item">
                <span>Maria García</span>
                <div class="acciones">
                    <button onclick="editarAlumno(2)">Editar</button>
                    <button onclick="eliminarAlumno(2)">Eliminar</button>
                </div>
            </li>
            <!-- Más alumnos de ejemplo -->
        </ul>
    </div>
</div>

<script>
    function toggleAgregarAlumnos() {
        document.getElementById("dropdownAgregar").classList.toggle("show");
    }

    function invitarAlumno() {
        alert("Funcionalidad para invitar alumno en construcción");
    }

    function editarAlumno(id) {
        alert("Editar información del alumno ID: " + id);
    }

    function eliminarAlumno(id) {
        if (confirm("¿Seguro que deseas eliminar este alumno?")) {
            alert("Alumno ID " + id + " eliminado");
        }
    }
</script>

<style>
    .alumnos-container {
        padding: 20px;
    }
    .add-alumno-container {
        position: relative;
        display: inline-block;
