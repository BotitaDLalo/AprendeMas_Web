    .add-alumno-btn {
        background-color: #007bff;
        color: white;
        padding: 10px 15px;
        border: none;
        cursor: pointer;
    }
    .dropdown-agregar {
        display: none;
        position: absolute;
        background: white;
        border: 1px solid #ddd;
        margin-top: 5px;
    }
    .dropdown-agregar.show {
        display: block;
    }
    .dropdown-agregar button {
        display: block;
        width: 100%;
        padding: 10px;
        border: none;
