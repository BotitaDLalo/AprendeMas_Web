@section Scripts {
    <!--Incluye el archivo de JavaScript para manejar las funcionalidades específicas de los docentes-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/Docente/Grupos/materia.js"></script>
    <script src="~/js/Docente/Grupos/busquedaAlumnoCorreo.js"></script>
}


<div class="container mt-3">
    <label for="buscarAlumno" class="form-label">Buscar alumno por correo:</label>
    
    <div class="input-group">
        <input type="text" id="buscarAlumno" class="form-control" placeholder="Ingrese el correo del alumno..." autocomplete="off">
        <button id="btnAgregarAlumno" class="btn btn-primary" onclick="agregarAlumno()">Agregar Alumno</button>
    </div>

    <ul id="sugerenciasAlumnos" class="list-group mt-2"></ul>
</div>



<script>
    function toggleAgregarAlumnos() {
        document.getElementById("dropdownAgregar").classList.toggle("show");
    }

    function invitarAlumno() {
        alert("Funcionalidad para invitar alumno en construcción");
    }

    function editarAlumno(id) {
        alert("Editar información del alumno ID: " + id);
    }

    function eliminarAlumno(id) {
        if (confirm("¿Seguro que deseas eliminar este alumno?")) {
            alert("Alumno ID " + id + " eliminado");
        }
    }
</script>

<style>
    .alumnos-container {
        padding: 20px;
    }
    .add-alumno-container {
        position: relative;
        display: inline-block;
    }
    .add-alumno-btn {
        background-color: #007bff;
        color: white;
        padding: 10px 15px;
        border: none;
        cursor: pointer;
    }
    .dropdown-agregar {
        display: none;
        position: absolute;
        background: white;
        border: 1px solid #ddd;
        margin-top: 5px;
    }
    .dropdown-agregar.show {
        display: block;
    }
    .dropdown-agregar button {
        display: block;
        width: 100%;
        padding: 10px;
        border: none;
        background: none;
        cursor: pointer;
    }
    .lista-alumnos {
        margin-top: 20px;
    }
    .alumno-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: #f8f9fa;
        padding: 10px;
        margin: 5px 0;
        border-radius: 5px;
    }
    .acciones button {
        margin-left: 5px;
        padding: 5px 10px;
        border: none;
        cursor: pointer;
    }
</style>
