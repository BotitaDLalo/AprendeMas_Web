<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>

	@* Estilos Cards materias - grupos *@
	<link rel="stylesheet" href="~/css/Alumno/Calificacion.css" asp-append-version="true" />

	@* Estilos Cards materias - grupos *@
	<link rel="stylesheet" href="~/css/Alumno/Cards.css" asp-append-version="true" />

	@* Estilos Pagina dinamicas de grupos - materias *@
	<link rel="stylesheet" href="~/css/Alumno/PaginasDi.css" asp-append-version="true" />

	@* Estilos Footer *@
	<link rel="stylesheet" href="~/css/Docente/footer.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

	@* Estilos del layout *@
	<link rel="icon" href="~/Iconos/LOGO VERTICAL-26.svg" type="image/x-icon" />
	<link rel="stylesheet" href="~/css/Alumno/Layout.css" asp-append-version="true" />

	@* Estilos de Fuentes *@
	<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&family=Roboto:wght@400;700&display=swap" rel="stylesheet">

	@* Estilos creacion de clases *@
	<link rel="stylesheet" href="~/css/Alumno/Clases.css" asp-append-version="true" />

	@* Estilos card materias *@
	<link rel="stylesheet" href="~/css/Alumno/materias.css" asp-append-version="true" />


	@* Estilos de materias(avisos,act, etc.) *@
	<link rel="stylesheet" href="~/css/Alumno/Vistamaterias.css" asp-append-version="true" />

	@* Estilos de notifiaciones *@
	<link rel="stylesheet" href="~/css/Alumno/Notificaciones.css" asp-append-version="true" />

	@* 	Estilos del calendario *@
	<link rel="stylesheet" href="~/css/Alumno/Calendario.css" asp-append-version="true" />

	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/AprendeMasWeb.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 layout">
			<div class="container-fluid">

				<a class="navbar-brand" asp-area="" asp-controller="Alumno" asp-action="Index">
					<img src="@Url.Content("~/Iconos/LOGO HORIZONTAL-26.svg")" alt="ActivIA Logo" class="navbar-icon">
				</a>

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">

						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Alumno" asp-action="Index">
								<img class="iconos-nav" src="@Url.Content("~/Iconos/1-26.svg")" alt="Icono de Inicio" />
							</a>
						</li>

						<li class="nav-item">
							<a id="calendario-icono" class="nav-link text-dark" href="#">
								<img class="iconos-nav" src="@Url.Content("~/Iconos/AGENDA-26.svg")" alt="Icono de Calendario" />
							</a>
							<div id="calendario-panel" class="calendario-container">
								<input type="text" id="calendario-input">
							</div>
						</li>


						<li class="nav-item">
							<a id="notificaciones-icono" class="nav-link text-dark" href="#">
								<img class="iconos-nav" src="@Url.Content("~/Iconos/NOTIFICACIONES-26.svg")" alt="Icono de Notificaciones" />
							</a>
							<div id="notificaciones-panel" class="notificaciones-container">
								<p>🔔 No tienes nuevas notificaciones</p>
							</div>
						</li>

						<li class="nav-item dropdown">
							<a href="#" class="nav-link text-dark " id="user-icon" onclick="toggleMenu(event)">
								<img class="iconos-nav dropdown-toggle" src="@Url.Content("~/Iconos/PERFIL-26.svg")" alt="Icono de Usuario" />
								
							</a>
							<div class="dropdown-menu" id="user-menu">
								<div class="user-info">
									<img class="iconos1-nav" src="@Url.Content("~/Iconos/PERFIL-26.svg")" alt="Icono de Usuario" />
									<p class="dropdown-item">@User.Identity.Name</p>
								</div>
								<form asp-action="CerrarSesion" asp-controller="Cuenta" method="post" class="dropdown-item">
									<button type="submit" class="btn btn-danger btn-sm w-100">Cerrar Sesión</button>
								</form>
							</div>

						</li>



						@* <li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Alumno" asp-action="Index">
								<img class="iconos-nav" src="@Url.Content("~/Iconos/PERFIL-26.svg")" alt="Icono de Usuario" />
							</a>
						</li>

						<li class="nav-item">
							<a class="nav-link" href="#">@User.Identity.Name</a>
						</li>
						
						@if (User.Identity.IsAuthenticated)
						{
							<li class="nav-item">
								<form asp-action="CerrarSesion" asp-controller="Cuenta" method="post">
									<button type="submit" class="btn btn-danger">Cerrar Sesión</button>
								</form>
							</li>
						}
						else
						{
							<li class="nav-item">
								<a class="nav-link" asp-action="IniciarSesion" asp-controller="Cuenta">Iniciar Sesión</a>
							</li>
						} *@
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()

			<br />
			<br />
			
		</main>
	</div>


@* 	Modales *@
	<div id="modal-evento">
    <div class="modal-content">
        <span id="cerrar-modal" class="close">&times;</span>
        <h2>Eventos del <span id="fecha-seleccionada"></span></h2>

        <div id="lista-eventos">
            <!-- Aquí se mostrarán los eventos del día -->
        </div>

        <button id="agregar-evento">Agregar Evento</button>

        <div id="formulario-evento" style="display: none;">
            <label for="titulo">Título:</label>
            <input type="text" id="titulo">

            <label for="descripcion">Descripción:</label>
            <textarea id="descripcion"></textarea>

            <label for="fecha-inicio">Fecha Inicio:</label>
				<input type="datetime-local" id="fecha-inicio">

            <label for="fecha-final">Fecha Final:</label>
				<input type="datetime-local" id="fecha-final">

            <label for="color">Color:</label>
            <select id="color">
                <option value="azul">Azul</option>
                <option value="gris">Gris</option>
            </select>
			<br><br>
            <button id="guardar-evento">Guardar</button>
        </div>
    </div>
</div>

	<div id="modal-editar-evento" class="modal">
		<div class="modal-content">
			<h2>Editar Evento</h2>
			<input type="hidden" id="editar-evento-id">
			<label>Título:</label>
			<input type="text" id="editar-titulo">
			<label>Descripción:</label>
			<textarea id="editar-descripcion"></textarea>
			<label>Fecha de inicio:</label>
			<input type="date" id="editar-fecha-inicio">
			<label>Fecha de finalización:</label>
			<input type="date" id="editar-fecha-final">
			<label>Color:</label>
			<input type="color" id="editar-color">
			<br />
			<button id="guardar-edicion-evento">Guardar Cambios</button>
			<br />
			<button onclick="document.getElementById('modal-editar-evento').style.display='none'">Cancelar</button>
		</div>
	</div>







	<footer class="custom-footer">
		<div class="footer-container">
			<!-- Logo alineado a la izquierda -->
			<div class="footer-left">
				<img src="@Url.Content("~/Iconos/iconizer-LOGO HORIZONTAL-AzulF.svg")" alt="Logo" class="footer-logo">
			</div>

			<!-- Copyright centrado -->
			<div class="footer-center">
				<p class="footer-text">© Copyright Aprende+. Todos los Derechos Reservados.</p>
			</div>

			<!-- Aviso de privacidad a la derecha -->
			<div class="footer-right">
				<a href="#" id="privacy-link" class="privacy-link">Aviso de Privacidad</a>
			</div>
		</div>
	</footer>

	<!-- Modal de privacidad -->
	<div id="privacy-modal" class="modal">
		<div class="modal-content">
			<!-- Botón para cerrar (X) -->
			<span class="close-modal">&times;</span>

			<!-- Título del modal -->
			<h2 class="modal-title">Aviso de Privacidad</h2>
			<hr />

			<!-- Contenido del aviso -->
			<p class="modal-text">
				En Aprende+ valoramos tu privacidad. Este aviso describe cómo recopilamos, usamos y protegemos la información personal que compartes con nosotros. Si tienes alguna duda, no dudes en contactarnos.
			</p>

			<!-- Botón de aceptar -->
			<button class="modal-button" id="modal-accept">Aceptar</button>
		</div>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/js/Docente/footer.js" asp-append-version="true"></script>
	<script src="~/js/Alumnos/layout.js" asp-append-version="true"></script>

	<!-- Incluir SweetAlert2 desde CDN -->
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

	<script>
		let alumnoIdGlobal = @User.FindFirst("AlumnoId")?.Value ?? "null";
		console.log("alumnoIdGlobal definido en HTML:", alumnoIdGlobal);
	</script>

	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

	@* Mostrar avisos *@
	<script src="~/js/Alumnos/Avisos.js" asp-append-version="true"></script>

	@* Mostrar actividades *@
	<script src="~/js/Alumnos/ActividadesM.js" asp-append-version="true"></script>

	@* Ventanas dinamicas de grupos - materias *@
	<script src="~/js/Alumnos/VentanasDi.js" asp-append-version="true"></script>

	@* Unirse a una clase API *@
	<script src="~/js/Alumnos/UnirseClase.js" asp-append-version="true"></script>

	@* Llamar el claim alumno *@
	<script src="~/js/Alumnos/alumno.js" asp-append-version="true"></script>

	@* Estilos creacion de clases *@
	<script src="~/js/Alumnos/Clases.js" asp-append-version="true"></script>
	
	@* Estilos card materias *@
	<script src="~/js/Alumnos/materias.js" asp-append-version="true"></script>

	@* Estilos de materias(avisos,act, etc.) *@
	<script src="~/js/Alumnos/Vistamaterias.js" asp-append-version="true"></script>

	@* Estilos de notifiaciones *@
	<script src="~/js/Alumnos/Notificaciones.js" asp-append-version="true"></script>

	@* 	Estilos del calendario *@
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
	<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
	<script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/es.js"></script>
	<script src="~/js/Alumnos/Calendario.js" asp-append-version="true"></script>



	@await RenderSectionAsync("Scripts", required: false)


</body>
</html>
