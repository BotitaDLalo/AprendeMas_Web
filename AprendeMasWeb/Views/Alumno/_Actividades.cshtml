<div class="alert ">
  
    <ul id="actividades-container" class="list-group">
        <li class="list-group-item">Selecciona una materia para ver sus actividades.</li>
    </ul>
</div>

<!-- Modal para entregar actividad -->
<div class="modal fade" id="modalEntregaActividad" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Entregar Actividad</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h5 id="actividadTitulo"></h5>
                <p id="actividadDescripcion"></p>
                <small class="text-muted">Fecha límite: <span id="actividadFechaLimite"></span></small>
                <br>
                <small class="text-muted">Puntaje: <span id="actividadPuntaje"></span></small>
                <hr>
                <label for="respuestaActividad">Ingresa el enlace de entrega:</label>
                <input type="text" id="respuestaActividad" class="form-control" placeholder="https://tu-enlace.com">
                <input type="hidden" id="actividadId">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="enviarEntrega()">Enviar</button>
            </div>
        </div>
    </div>
</div>
