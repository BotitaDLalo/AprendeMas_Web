
@{
    Layout = "~/Views/Shared/_LayoutAlumno.cshtml";
    ViewData["Title"] = "Materia";
}

<div class="materia-header-unique">
    <div class="materia-nombre-unique">Matemáticas</div>
    <div class="materia-datos-unique">
        <div class="materia-codigo-unique">Código: 12345</div>
        <span class="materia-config-unique">⚙️</span>
    </div>
</div>

<div class="materia-container-unique">
    <!-- Navegación -->
    <div class="materia-nav-unique">
        <div class="materia-tab-unique active" onclick="cambiarVista('avisos')">Avisos</div>
        <div class="materia-tab-unique" onclick="cambiarVista('actividades')">Actividades</div>
        <div class="materia-tab-unique" onclick="cambiarVista('alumnos')">Alumnos</div>
        <div class="materia-tab-unique" onclick="cambiarVista('calificaciones')">Calificaciones</div>
    </div>

    <!-- Contenedor de las vistas -->
    <div class="materia-content-unique">
        <div id="avisos" class="materia-view-unique active">
            <h2>Avisos</h2>
            <p>Aquí aparecerán los avisos de la materia.</p>
        </div>
        <div id="actividades" class="materia-view-unique">
            <h2>Actividades</h2>
            <p>Lista de actividades asignadas.</p>
        </div>
        <div id="alumnos" class="materia-view-unique">
            <h2>Alumnos</h2>
            <p>Lista de alumnos inscritos.</p>
        </div>
        <div id="calificaciones" class="materia-view-unique">
            <h2>Calificaciones</h2>
            <p>Registro de calificaciones.</p>
        </div>
    </div>
</div>


