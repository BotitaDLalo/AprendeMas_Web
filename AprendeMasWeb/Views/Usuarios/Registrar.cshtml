@{
	Layout = null;
}


<!DOCTYPE html>
<html>
<head>
	<link rel="icon" href="~/Iconos/LOGO VERTICAL-26.svg" type="image/x-icon" />
	<meta name="viewport" content="width=device-width" />
	<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&family=Roboto:wght@400;700&display=swap" rel="stylesheet">
	<link href="~/css/InicioSesion/Registro.css" rel="stylesheet" />
	<title>Registrarse</title>

</head>
<body>


	<div class="login-container">
		<!-- Logo centrado fuera del contenedor -->
		<div class="logo">
			<img src="@Url.Content("~/Iconos/iconizer-LOGO HORIZONTAL-AzulF.svg")" alt="Logo" class="logo-image">
		</div>


		<div class="login-box">

			<h2>Crea una cuenta</h2>

			<form asp-action="Registrar" method="post">

				<div class="form-group floating-label floating-label2" style="display: flex; align-items: center; gap: 7px;">
					<label for="role" style="margin: 0;">Tipo de Usuario</label>
					<select name="role" class="form-control" required>
						<option value="Alumno">Alumno</option>
						<option value="Docente">Docente</option>
					</select>
				</div>

				<div class="form-group floating-label">
					<input type="text" name="nombre"  class="form-control mb-3" placeholder="" required />
					<label for="nombre">Nombre</label>
				</div>

				<div class="form-group floating-label">
					<input type="text" name="apellidoPaterno" class="form-control mb-3" placeholder="" required />
					<label for="apellidoPaterno">Apellido Paterno</label>
				</div>

				<div class="form-group floating-label">
					<input type="text" name="apellidoMaterno" class="form-control mb-3" placeholder="" required />
					<label for="apellidoMaterno">Apellido Materno</label>
				</div>

				<div class="form-group floating-label">
					<input type="email" name="email" class="form-control mb-3" placeholder="" required />
					<label for="email">Correo Electrónico</label>
				</div>

				<div class="form-group floating-label" style="position: relative;">
					<input type="password"
						   name="password"
						   class="form-control mb-3"
						   id="Password"
						   placeholder=""
						   required
						   oninput="validatePassword()" />
					<label for="password">Contraseña</label>
					<!-- Ícono de ojo -->
					<span id="showPassword" id="togglePassword" class="checkbox-left" onclick="togglePassword()" style="position: absolute; right: 21px; top: 32%; transform: translateY(-50%); cursor: pointer;">
						<i class="fa fa-eye" aria-hidden="true"></i>
					</span>

					<!-- Lista de validaciones en una sola línea -->
					<p id="password-rules" class="password-rules">
						<span id="rule-uppercase" class="rule">Una mayúscula,</span>
						<span id="rule-special" class="rule">Un carácter especial,</span>
						<span id="rule-number" class="rule">Un número,</span>
						<span id="rule-length" class="rule">8 caracteres.</span>
					</p>
				</div>



				<div class="form-group">
				<button type="submit" class="btn btn-primary">Registrar</button>
				</div>

				<div class="mt-4">
					<p>¿Ya tienes cuenta? <a asp-action="IniciarSesion" asp-controller="Cuenta" class="btn-link">Inicia Sesión aquí</a></p>
				</div>

			

				<div class="form-group">

					<a asp-controller="Login" asp-action="Login" class="btn btn-google">
						<img src="https://img.icons8.com/ios11/512/7950F2/google-logo.png" alt="Google logo" class="google-icon" />
						Registrar con Google
					</a>
				</div>


			</form>
			
		</div>
		<br>
	</div>
	
	<script src="~/js/InicioSesion/password.js"></script>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</body>
</html>
